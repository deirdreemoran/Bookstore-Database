<h1 class="h2">Welcome, please login.</h1>
<form method="post" action="/login">
  <div class="form-group">
    <select class="form-control" name="loginType">
      <option value="user" name="user">Login as User</option>
      <option value="admin" name="admin">Login as Admin</option>
    </select>
  </div>
  <div class="form-group">
    <label for="email">Email<label>
    <input type="text" id="email" placeholder="Enter Email" name="email" required>
  </div>
  <div class="form-group">
    <label for"password">Password</label>
    <input type="password" id="password" placeholder="Enter Password" name="password" required>
  </div>
  <button class="btn btn-primary mb-2" type="submit">Login</button>
</form>
