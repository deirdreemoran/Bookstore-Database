<h1>bs_companyhandlebars</h1>


<form method="post" action="/companies">
  <label>Company Name: </label><input type="text" name="companyName" ><br>
  <label>Address: </label><input type="text" name="address" ><br>
  <label>City: </label> <input type="text" name="city" ><br>
  <label>State: </label><input type="text" name="state" ><br>
  <label>Zipcode: </label><input type="text" name="zipcode" ><br>
  <label>Country: </label><input type="text" name="country" ><br>

  <input type="submit" name="Add Company" value="Add Company">
</form>
{{#if bs_company}}
<table border="solid" name="bs_company">
<th>Company ID
    <th>Company Name
    <th>Address
    <th>City
    <th>State
    <th>Zipcode
    <th>Country
</th>
  {{#each bs_company}}
  <tr>
    <td>{{this.companyName}}</td>
    <td>{{this.address}}</td>
    <td>{{this.city}}</td>
    <td>{{this.state}}</td>
    <td>{{this.zipcode}}</td>
    <td>{{this.country}}</td>

    <td><form method="post" action="/companies">
    <input type="hidden" name="companyID" value="{{this.companyID}}">
      <input type="submit" name="Delete" value="Delete">
    </form></td>
    
    <td><form method="get" action="/companies">
          <input type="hidden" name="companyName" value="{{this.companyName}}">
          <input type="hidden" name="address" value="{{this.address}}">
          <input type="hidden" name="city" value="{{this.city}}">
          <input type="hidden" name="state" value="{{this.state}}">
          <input type="hidden" name="zipcode" value="{{this.zipcode}}">
          <input type="hidden" name="country" value="{{this.country}}">
          <input type="submit" name="Edit" value="Edit">
    </form></td>
  </tr>
  {{/each}}
</table>
{{/if}}


