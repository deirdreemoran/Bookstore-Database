<h1>bs_pubhandlebars</h1>


<form method="post" action="/publishers">
  <label>Publisher Name: </label><input type="text" name="publisherName" ><br>
  <label>Address: </label><input type="text" name="address" ><br>
  <label>City: </label> <input type="text" name="city" ><br>
  <label>State: </label><input type="text" name="state" ><br>
  <label>Zipcode: </label><input type="number" name="zipcode" ><br>
  <label>Country: </label><input type="text" name="country" ><br>

  <input type="submit" name="Add Publisher" value="Add Publisher">
</form>


{{#if bs_pub}}
<table border="solid" name="bs_pub">
<th>Publisher ID
    <th>Publisher Name
    <th>Address
    <th>City
    <th>State
    <th>Zipcode
    <th>Country
    
</th>
  {{#each bs_pub}}
  <tr>
    <td>{{this.publisherID}}</td>
    <td>{{this.publisherName}}</td>
    <td>{{this.address}}</td>
    <td>{{this.city}}</td>
    <td>{{this.state}}</td>
    <td>{{this.zipcode}}</td>
    <td>{{this.country}}</td>

    <td><form method="post" action="/publishers">
    		<input type="hidden" name="publisherID" value="{{this.publisherID}}">
      <input type="submit" name="Delete" value="Delete">
    </form></td>
    
    <td><form method="get" action="/publishers">
          <input type="hidden" name="publisherID" value="{{this.publisherID}}">
          <input type="hidden" name="publisherName" value="{{this.publisherName}}">
          <input type="hidden" name="address" value="{{this.address}}">
          <input type="hidden" name="city" value="{{this.city}}">
          <input type="hidden" name="state" value="{{this.state}}">
          <input type="hidden" name="zipcode" value="{{this.zipcode}}">
          <input type="hidden" name="country" value="{{this.country}}">
          <input type="submit" name="Edit" value="Edit">
    </form></td>
  </tr>
  {{/each}}
</table>
{{/if}}


